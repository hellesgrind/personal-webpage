---
import '../styles/global.css';
import ProjectCard from '../components/ProjectCard.astro';

const projects = [
  {
    title: "Название Проекта",
    description: "Краткое описание проекта и использованные технологии.",
    image: "https://via.placeholder.com/400x200",
    logo: "https://via.placeholder.com/50",
    color: "bg-blue-600",
    technologies: ["React", "Node.js"],
    demoLink: "#",
    githubLink: "#"
  },
  {
    title: "Второй Проект",
    description: "Описание второго проекта и его особенности.",
    image: "https://via.placeholder.com/400x200",
    logo: "https://via.placeholder.com/50",
    color: "bg-purple-600",
    technologies: ["Vue", "Firebase"],
    demoLink: "#",
    githubLink: "#"
  },
  {
    title: "Третий Проект",
    description: "Еще один интересный проект с описанием.",
    image: "https://via.placeholder.com/400x200",
    logo: "https://via.placeholder.com/50",
    color: "bg-green-600",
    technologies: ["Angular", "TypeScript"],
    demoLink: "#",
    githubLink: "#"
  }
];
---

<html lang="ru">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Моя страница</title>
	</head>
	<body class="min-h-screen bg-white">
		<div class="container mx-auto px-4 py-8">
			<header class="text-center mb-16">
				<div class="mb-8">
					<img src="/images/profile_2.png" alt="Profile" class="w-48 h-48 rounded-full mx-auto mb-4 shadow-lg object-cover" />
					<h1 class="text-4xl font-bold text-gray-800 mb-2">HellesGrind</h1>
					<p class="text-xl text-gray-600 mb-6">I do apps and tools with generative AI</p>
					<div class="flex justify-center gap-4">
						<a href="https://t.me/yourusername" target="_blank" class="bg-blue-500 text-white p-3 rounded-full hover:bg-blue-600 transition-colors">
							<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18.717-1.908 7.917-2.124 8.801-.091.372-.271.496-.446.508-.38.027-.67-.252-.1.04-1.257-.509-4.57-1.649-5.409-2.008-.306-.131-.468-.308-.456-.549.027-.539 1.455-1.67 5.804-4.433.177-.113.265-.241.265-.384 0-.168-.106-.24-.318-.215-.141.016-.357.123-.649.318-2.196 1.505-4.072 2.59-5.626 3.257-.488.21-.932.314-1.332.314-.293 0-.877-.136-1.752-.408-.691-.215-1.243-.328-1.654-.341-.422-.013-.633.295-.633.923 0 .198.016.385.049.56.52 2.762 2.495 9.123 2.658 9.607.098.292.195.393.292.393.134 0 .389-.191.765-.574 1.553-1.58 3.062-3.932 4.525-7.059.058-.124.196-.355.415-.693.219-.337.4-.554.544-.65.143-.095.324-.143.543-.143.275 0 .413.109.413.328 0 .043-.005.108-.016.195z"/>
							</svg>
						</a>
						<a href="https://twitter.com/yourusername" target="_blank" class="bg-black text-white p-3 rounded-full hover:bg-gray-800 transition-colors">
							<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
								<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
							</svg>
						</a>
					</div>
				</div>
			</header>

			<main class="max-w-6xl mx-auto">
				<section class="mb-16 max-w-3xl mx-auto">
					<h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Обо мне</h2>
					<div class="bg-gray-50 rounded-lg p-8 mb-8">
						<p class="text-gray-700 text-lg leading-relaxed mb-6">
							Здесь расскажите о себе: ваш опыт, чем занимаетесь, что вас вдохновляет. 
							Опишите ваш подход к разработке и какие задачи вам интересны.
						</p>
						<div>
							<h3 class="text-xl font-semibold text-gray-800 mb-4">Мой стек технологий</h3>
							<div class="flex flex-wrap gap-3">
								<span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-lg font-medium">JavaScript</span>
								<span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-lg font-medium">TypeScript</span>
								<span class="px-4 py-2 bg-cyan-100 text-cyan-800 rounded-lg font-medium">React</span>
								<span class="px-4 py-2 bg-green-100 text-green-800 rounded-lg font-medium">Node.js</span>
								<span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-lg font-medium">Python</span>
								<span class="px-4 py-2 bg-orange-100 text-orange-800 rounded-lg font-medium">AI/ML</span>
								<span class="px-4 py-2 bg-gray-100 text-gray-800 rounded-lg font-medium">Git</span>
								<span class="px-4 py-2 bg-indigo-100 text-indigo-800 rounded-lg font-medium">Docker</span>
							</div>
						</div>
					</div>
				</section>

				<section class="mb-16">
					<h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Мои Проекты</h2>
					<div class="flex flex-col gap-6 max-w-2xl mx-auto">
						{projects.map((project) => (
							<ProjectCard {...project} />
						))}
					</div>
				</section>
			</main>

			<footer class="text-center mt-16 text-gray-600">
				<p>&copy; 2025 Мой Astro проект. Создано с ❤️</p>
			</footer>
		</div>
	</body>
</html>
