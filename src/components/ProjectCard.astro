---
export interface Props {
  title: string;
  description: string;
  image: string;
  logo?: string;
  color?: string;
  technologies: string[];
  demoLink?: string;
  githubLink?: string;
}

const { title, description, image, logo, color = 'bg-blue-500', technologies, demoLink, githubLink } = Astro.props;
---

<div class={`group bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 flex flex-col md:flex-row hover:${color}`}>
  <img src={image} alt={title} class="w-full md:w-1/3 h-48 md:h-auto object-cover" />
  <div class="p-6 flex-1">
    <div class="flex items-center gap-3 mb-3">
      {logo && <img src={logo} alt={`${title} logo`} class="w-8 h-8 object-contain" />}
      <h3 class="text-xl font-semibold text-gray-800 group-hover:text-white transition-colors">{title}</h3>
    </div>
    <p class="text-gray-600 mb-4 group-hover:text-white/90 transition-colors">{description}</p>
    <div class="flex gap-2 mb-4 flex-wrap">
      {technologies.map((tech) => (
        <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full group-hover:bg-white/20 group-hover:text-white transition-colors">
          {tech}
        </span>
      ))}
    </div>
    <div class="flex gap-4">
      {demoLink && (
        <a href={demoLink} class="text-indigo-600 hover:text-indigo-800 group-hover:text-white group-hover:underline transition-colors">
          Демо
        </a>
      )}
      {githubLink && (
        <a href={githubLink} class="text-gray-600 hover:text-gray-800 group-hover:text-white/80 group-hover:underline transition-colors">
          GitHub
        </a>
      )}
    </div>
  </div>
</div>